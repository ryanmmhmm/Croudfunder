<h1>New Project</h1>

<%= form_for(@project) do |f| %>
<section id="registration" class="container">
  <form class="center" role="form">
    <fieldset class="registration-form">
			<div class="form-group">
				<%= f.label :title %><br />
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :start_date %><br />
				<%= f.date_select :start_date, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :end_date %><br />
				<%= f.date_select :end_date, class: "form-control"  %>
			</div>

			<div class="form-group">
		  	<%= f.label :category %><br />
		  	<%= f.select :category, ['Art','Comics', 'Crafts', 'Dance', 'Design', 'Fashion', 'Film & Video', 'Food', 'Games', 'Journalism', 'Music', 'Photography', 'Publishing', 'Technology', 'Theatre'], prompt: 'Select one', class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :funding_goal %><br />
				<%= f.number_field :funding_goal, min: 1, max: 5000000, class: "form-control"  %>
			</div>

			<div class="form-group">
				<%= f.label "One line Summary" %><br />
				<%= f.text_area :description, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label "Full description" %><br />
				<%= f.text_area :long_description, class: "form-control" %>
			</div>

		  <div class="form-group">
		    <%= f.label :picture_url %><br />
		    <%= f.text_field :picture_url, class: "form-control" %>
		  </div>
		  <h2>Rewards</h2>

		  <div id="rewards">

		  	<%= f.fields_for :rewards do |reward| %>
		  		<%= render 'reward_fields', f: reward %>
		  	<% end %>

		  	<div class="links">
		  		<%= link_to_add_association 'Add Reward', f, :rewards %>
		  	</div>

		  </div>

		  <div class="actions">
		  	<%= f.submit %>
		  </div>

    </fieldset>
  </form>
</section>

<% end %>



<% link_to 'Back', projects_path %>
