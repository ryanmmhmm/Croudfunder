<%= form_for @user do |f| %>

<div>
<%= f.label :first_name %> <br/>
<%= f.text_field :first_name %>
</div>

<div>
<%= f.label :last_name %> <br/>
<%= f.text_field :last_name %>
</div>

<div>
<%= f.label :email %> <br/>
<%= f.text_field :email %>
</div>

<div>
<%= f.label :password %> <br/>
<%= f.password_field :password %>
</div>

<div>
<%= f.label :password_confirmation %> <br/>
<%= f.password_field :password_confirmation %>
</div>
<%= submit_tag 'Sign Up' %>

<% end %>